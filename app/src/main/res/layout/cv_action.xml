<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_hint_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hint_port"
            android:text="12"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_hint_type_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_toEndOf="@+id/tv_hint_port"
            android:text="Type port"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_port_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hint_type_port"
            android:layout_alignStart="@id/tv_hint_type_port"
            android:text="analog"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_hint_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_hint_type_port"
            android:text="Device"
            android:layout_marginStart="90dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hint_device"
            android:layout_alignStart="@id/tv_hint_device"
            android:text="frfre"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_hint_status_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:text="fefewrfe"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hint_status_port"
            android:layout_alignStart="@id/tv_hint_status_port"
            android:text="frfre"
            android:textColor="@android:color/black" />
    </RelativeLayout>
</android.support.v7.widget.CardView>